          "name": "Search Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/products/search?keyword=iphone&page=0&size=10",
              "host": ["{{base_url}}"],
              "path": ["api", "products", "search"],
              "query": [
                {"key": "keyword", "value": "iphone"},
                {"key": "page", "value": "0"},
                {"key": "size", "value": "10"}
              ]
            }
          }
        }
